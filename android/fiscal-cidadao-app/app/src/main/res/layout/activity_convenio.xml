<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/colorActivityBackground"
    tools:context="br.com.gigascorp.ficalcidadao.ConvenioActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <!--Objeto-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/label_size"
            android:text="Objeto"
            android:textColor="@color/colorLabel"
            />

        <TextView
            android:id="@+id/txtConvenioObjeto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size"
            android:textStyle="bold"
            android:text="Objeto Default"
            android:textColor="@color/colorText"
            android:paddingLeft="@dimen/txt_horizontal_margin"
            android:paddingRight="@dimen/txt_horizontal_margin"
            android:paddingTop="@dimen/txt_vertical_margin"
            android:paddingBottom="@dimen/txt_vertical_margin"
            />

        <!--Proponente-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/label_size"
            android:text="Promonente"
            android:textColor="@color/colorLabel"
            />

        <TextView
            android:id="@+id/txtConvenioPromonente"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size"
            android:text="Proponente Default"
            android:textStyle="bold"
            android:textColor="@color/colorText"
            android:paddingLeft="@dimen/txt_horizontal_margin"
            android:paddingRight="@dimen/txt_horizontal_margin"
            android:paddingTop="@dimen/txt_vertical_margin"
            android:paddingBottom="@dimen/txt_vertical_margin"
            />


        <!--Responsável-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/label_size"
            android:text="Reponsável"
            android:textColor="@color/colorLabel"
            />

        <TextView
            android:id="@+id/txtConvenioResponsavel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size"
            android:text="Responsável Default"
            android:textStyle="bold"
            android:textColor="@color/colorText"
            android:paddingLeft="@dimen/txt_horizontal_margin"
            android:paddingRight="@dimen/txt_horizontal_margin"
            android:paddingTop="@dimen/txt_vertical_margin"
            android:paddingBottom="@dimen/txt_vertical_margin"
            />

        <!--Telefone-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/label_size"
            android:text="Telefone"
            android:textColor="@color/colorLabel"
            />

        <TextView
            android:id="@+id/txtConvenioTelefone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size"
            android:text="Telefone Default"
            android:textStyle="bold"
            android:textColor="@color/colorText"
            android:paddingLeft="@dimen/txt_horizontal_margin"
            android:paddingRight="@dimen/txt_horizontal_margin"
            android:paddingTop="@dimen/txt_vertical_margin"
            android:paddingBottom="@dimen/txt_vertical_margin"
            />

        <!--Período-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/label_size"
            android:text="Período"
            android:textColor="@color/colorLabel"
            />

        <TextView
            android:id="@+id/txtConvenioPeriodo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size"
            android:text="Periodo Default"
            android:textStyle="bold"
            android:textColor="@color/colorText"
            android:paddingLeft="@dimen/txt_horizontal_margin"
            android:paddingRight="@dimen/txt_horizontal_margin"
            android:paddingTop="@dimen/txt_vertical_margin"
            android:paddingBottom="@dimen/txt_vertical_margin"
            />

        <!--Situação-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/label_size"
            android:text="Situação"
            android:textColor="@color/colorLabel"
            />

        <TextView
            android:id="@+id/txtConvenioSituacao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size"
            android:text="Situação Default"
            android:textStyle="bold"
            android:textColor="@color/colorText"
            android:paddingLeft="@dimen/txt_horizontal_margin"
            android:paddingRight="@dimen/txt_horizontal_margin"
            android:paddingTop="@dimen/txt_vertical_margin"
            android:paddingBottom="@dimen/txt_vertical_margin"
            />

        <!--Valor-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/label_size"
            android:text="Valors"
            android:textColor="@color/colorLabel"
            />

        <TextView
            android:id="@+id/txtConvenioValor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size"
            android:text="Valor Default"
            android:textStyle="bold"
            android:textColor="@color/colorText"
            android:paddingLeft="@dimen/txt_horizontal_margin"
            android:paddingRight="@dimen/txt_horizontal_margin"
            android:paddingTop="@dimen/txt_vertical_margin"
            android:paddingBottom="@dimen/txt_vertical_margin"
            />

    </LinearLayout>

</RelativeLayout>
