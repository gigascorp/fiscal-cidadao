<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/colorActivityBackground"
    android:id="@+id/layout_convenio"
    tools:context="br.com.gigascorp.ficalcidadao.ConvenioActivity">

    <Button
        android:id="@+id/btnDenunciar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="8dp"
        android:padding="4dp"
        android:textSize="@dimen/text_size"
        android:background="@color/colorAccent"
        android:textStyle="bold"
        android:textColor="#FFF"
        android:text="@string/texto_btn_denunciar_convenio"/>

    <ScrollView
        android:layout_above="@id/btnDenunciar"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <!--Objeto-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/label_size"
                android:text="Objeto"
                android:textColor="@color/colorTextHint"
                />

            <TextView
                android:id="@+id/txtConvenioObjeto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size"
                android:text="@string/texto_default_teste"
                android:textColor="@color/colorPrimaryText"
                android:paddingLeft="@dimen/txt_horizontal_margin"
                android:paddingRight="@dimen/txt_horizontal_margin"
                android:paddingTop="@dimen/txt_margin_top"
                android:paddingBottom="@dimen/txt_margin_bottom"
                />

            <!--Proponente-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/label_size"
                android:text="Promonente"
                android:textColor="@color/colorTextHint"
                />

            <TextView
                android:id="@+id/txtConvenioPromonente"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size"
                android:text="@string/texto_default_teste"
                android:textColor="@color/colorPrimaryText"
                android:paddingLeft="@dimen/txt_horizontal_margin"
                android:paddingRight="@dimen/txt_horizontal_margin"
                android:paddingTop="@dimen/txt_margin_top"
                android:paddingBottom="@dimen/txt_margin_bottom"
                />


            <!--Responsável-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/label_size"
                android:text="Reponsável"
                android:textColor="@color/colorTextHint"
                />

            <TextView
                android:id="@+id/txtConvenioResponsavel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size"
                android:text="@string/texto_default_teste"
                android:textColor="@color/colorPrimaryText"
                android:paddingLeft="@dimen/txt_horizontal_margin"
                android:paddingRight="@dimen/txt_horizontal_margin"
                android:paddingTop="@dimen/txt_margin_top"
                android:paddingBottom="@dimen/txt_margin_bottom"
                />

            <!--Telefone-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/label_size"
                android:text="Telefone"
                android:textColor="@color/colorTextHint"
                />

            <TextView
                android:id="@+id/txtConvenioTelefone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size"
                android:text="@string/texto_default_teste"
                android:textColor="@color/colorPrimaryText"
                android:paddingLeft="@dimen/txt_horizontal_margin"
                android:paddingRight="@dimen/txt_horizontal_margin"
                android:paddingTop="@dimen/txt_margin_top"
                android:paddingBottom="@dimen/txt_margin_bottom"
                />

            <!--Período-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/label_size"
                android:text="Período"
                android:textColor="@color/colorTextHint"
                />

            <TextView
                android:id="@+id/txtConvenioPeriodo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size"
                android:text="@string/texto_default_teste"
                android:textColor="@color/colorPrimaryText"
                android:paddingLeft="@dimen/txt_horizontal_margin"
                android:paddingRight="@dimen/txt_horizontal_margin"
                android:paddingTop="@dimen/txt_margin_top"
                android:paddingBottom="@dimen/txt_margin_bottom"
                />

            <!--Situação-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/label_size"
                android:text="Situação"
                android:textColor="@color/colorTextHint"
                />

            <TextView
                android:id="@+id/txtConvenioSituacao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size"
                android:text="@string/texto_default_teste"
                android:textColor="@color/colorPrimaryText"
                android:paddingLeft="@dimen/txt_horizontal_margin"
                android:paddingRight="@dimen/txt_horizontal_margin"
                android:paddingTop="@dimen/txt_margin_top"
                android:paddingBottom="@dimen/txt_margin_bottom"
                />

            <!--Valor-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/label_size"
                android:text="Valor"
                android:textColor="@color/colorTextHint"
                />

            <TextView
                android:id="@+id/txtConvenioValor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size"
                android:text="@string/texto_default_teste"
                android:textColor="@color/colorPrimaryText"
                android:paddingLeft="@dimen/txt_horizontal_margin"
                android:paddingRight="@dimen/txt_horizontal_margin"
                android:paddingTop="@dimen/txt_margin_top"
                android:paddingBottom="@dimen/txt_margin_bottom"
                />

        </LinearLayout>
    </ScrollView>

</RelativeLayout>
