@model FiscalCidadaoWeb.Models.ListagemConvenioViewModel
<div class="conveniosListagem">
    <table id="conveniosTable" class="tablesorter" style="width:100%">
        <thead>
            <tr>
                <th>Objeto</th>
                <th>Situação</th>
                <th>Denúncias</th>
                <th>Parecer</th>
                <th class="datatable-nosort">Funções</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var convenio in Model.Lista)
            {
                <tr>
                    @Html.Hidden("convenioId", convenio.Id)
                    <td class="tdObjeto">@convenio.Objeto</td>
                    <td class="tdSituacao">@convenio.Situacao.Descricao</td>
                    <td class="tdDenuncia">@convenio.CountDenuncias</td>
                    @Html.Hidden("parecerId", convenio.ParecerId)
                    <td class="tdParecer">@convenio.ParecerGoverno.Parecer</td>
                    <td class="tdFuncoes">
                        <a>@Html.ActionLink("Ver", "DetalhesConvenio", "Convenio", new { id = convenio.Id }, null) / </a>
                        <a>@Html.ActionLink("Editar Local", "Index", "Home") / </a>
                        <a class="editarParecer">Parecer</a>

                    </td>
                </tr>
            }
        </tbody>
    </table>
    <div id="pager" class="pager"></div>
</div>

<script src="~/Scripts/App/ListagemConvenios.js"></script>
